<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/res_list_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ct_compact" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/res_list_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPCOMING"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/res_list_car_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compact"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/res_list_pickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lambert-St. Louis Int Airport"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/res_list_pickup_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thu Apr 25, 2018 - 12:00 PM"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/res_list_return_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thu Apr 27, 2018 - 12:00 PM"
                android:textColor="@color/black"
                android:textSize="10sp" />


        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>