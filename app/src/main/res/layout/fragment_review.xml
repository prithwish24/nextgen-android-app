<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/review_message"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/fluorescentGreen"
            android:contentDescription="@string/review_screen_user_message"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/review_screen_user_message"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="TRIP DETAILS" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2sp"
                android:text="Pickup:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/review_pickup_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2sp"
                android:text="Thu Apr 19, 2018 - 12:00 PM"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/review_pickup_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lambert-St. Louis Int. Airport"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2sp"
                android:text="Return:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/review_return_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2sp"
                android:text="Thu Apr 24, 2018 - 12:00 PM"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/review_return_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lambert-St. Louis Int. Airport"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="VEHICLE SELECTED" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/review_vehicle_image"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/show_reservation_thumbnail"
                android:scaleType="centerInside"
                tools:src="@drawable/ct_compact" />

            <TextView
                android:id="@+id/review_vehicle_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/review_vehicle_image"
                android:paddingBottom="2sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Economy"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/review_vehicle_class_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/review_vehicle_class"
                android:layout_toEndOf="@id/review_vehicle_image"
                android:paddingBottom="2sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Mitsubishi Mirage or similar"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="SELECTED ADDONS" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/review_additional_equip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2sp"
                android:text="GPS Navigator"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <!--<LinearLayout
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_review_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="RESET"
                android:theme="@style/FloatingButtonStyle" />
            <Button
                android:id="@+id/button_review_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRM"
                android:theme="@style/LoginActiveButtonStyle" />
        </LinearLayout>-->

    </LinearLayout>

</ScrollView>